<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 mx-auto">
    <%= form_for(:session, url: login_path) do |f| %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(forgot paddword)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: 'form-check-label mt-3 mb-3' do %>
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <span class="ml-4">Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p class="mt-3">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

